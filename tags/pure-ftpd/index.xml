&lt;h1 id=&#34;安裝:04c6e90faac2675aa89e2176d2eec7d8&#34;&gt;安裝&lt;/h1&gt;

&lt;pre&gt;&lt;code&gt;apt-get install pure-ftpd
&lt;/code&gt;&lt;/pre&gt;

&lt;h1 id=&#34;開帳號:04c6e90faac2675aa89e2176d2eec7d8&#34;&gt;開帳號&lt;/h1&gt;

&lt;pre&gt;&lt;code&gt;pure-pw useradd FTP_USER -u UBUNTU_USER -d /home/UBUNTU_USER -m
&lt;/code&gt;&lt;/pre&gt;

&lt;h1 id=&#34;設定-etc-pure-ftpd-conf:04c6e90faac2675aa89e2176d2eec7d8&#34;&gt;設定 /etc/pure-ftpd/conf&lt;/h1&gt;

&lt;pre&gt;&lt;code&gt;cd /etc/pure-ftpd/conf
echo yes &amp;gt; ChrootEveryone
echo yes &amp;gt; DontResolve
echo 1 &amp;gt; TLS
&lt;/code&gt;&lt;/pre&gt;

&lt;h1 id=&#34;產生-tls-key:04c6e90faac2675aa89e2176d2eec7d8&#34;&gt;產生 TLS key&lt;/h1&gt;

&lt;pre&gt;&lt;code&gt;openssl req -x509 -nodes -newkey rsa:1024 -days 3650 -keyout /etc/ssl/private/pure-ftpd.pem -out /etc/ssl/private/pure-ftpd.pem
chmod 600 /etc/ssl/private/pure-ftpd.pem
&lt;/code&gt;&lt;/pre&gt;

&lt;h1 id=&#34;重開-service:04c6e90faac2675aa89e2176d2eec7d8&#34;&gt;重開 service&lt;/h1&gt;

&lt;pre&gt;&lt;code&gt;service pure-ftpd restart
&lt;/code&gt;&lt;/pre&gt;

